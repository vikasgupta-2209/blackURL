        .team-section {
            display: flex;
            justify-content: space-around;
            margin-top: 40px;
        }

        .team-member {
            text-align: center;
            width: 30%;
        }


        .team-member h4 {
            font-size: 20px;
            color: #333;
        }

        .team-member p {
            font-size: 14px;
            color: #777;
        }

